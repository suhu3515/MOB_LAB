<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTestResultsActivity">

    <TableLayout
        android:id="@+id/table_tests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TableRow>

            <TextView
                android:id="@+id/txt_caps_TestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:text="Test name"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/txtview_test_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"/>

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/txt_caps_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:text="VALUE"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/et_obs_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:hint="Observation for test"
                android:layout_margin="10dp"/>

        </TableRow>

        <Button
            android:id="@+id/btn_add_tresult"
            android:text="submit result"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>