<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailsActivity">

    <TextView
        android:id="@+id/textview_doctor_caps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFERRED BY: "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textview_doctor_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dr zumala cv"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toEndOf="@+id/textview_doctor_caps"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="28dp"/>

    <TextView
        android:id="@+id/textview_date_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REQUESTED ON: "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textview_doctor_caps"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textview_date_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-11-20"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toEndOf="@id/textview_date_cap"
        app:layout_constraintTop_toBottomOf="@id/textview_doctor_val"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textview_payment_cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT: "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textview_date_cap"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textview_payment_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAID"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintStart_toEndOf="@id/textview_date_cap"
        app:layout_constraintTop_toBottomOf="@id/textview_date_val"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textview_status_cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR REQUEST STATUS IS"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/textview_payment_cap"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textview_status_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="generating report"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/bg_green"
        android:textSize="25sp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/textview_status_cap"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textview_tester_cap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOUR TEST IS DONE BY"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/textview_status_val"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/textview_tester_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOHAMMED ASLAM K"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:visibility="gone"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/textview_tester_cap"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/btn_add_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/bg_green"
        android:text="add feedback"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_tester_val"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_call_tester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/bg_green"
        android:text="CONTACT TESTER"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_tester_val"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_resubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FF0000"
        android:text="REQUEST AGAIN"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_tester_val"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>